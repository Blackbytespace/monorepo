{
  "exclude": [
    "./lotsof.config.ts",
    "./**/*.test.*",
    "./dist/**/*",
    "./node_modules/**/*",
    "./vendor/**/*"
  ],
  "compilerOptions": {
    "noImplicitAny": false,
    "rootDir": "components",
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "es6",
    "module": "nodenext",
    "sourceMap": true,
    "resolveJsonModule": true,
    // "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "nodenext"
  }
}
