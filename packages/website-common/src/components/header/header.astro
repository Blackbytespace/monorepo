---
interface Props {
  title: string;
  version: string;
  license: {
    name: string;
    url: string;
  };
}

import __logoBlackbyte from '@blackbyte/website-common/src/img/blackbyte-logo-picto.svg?raw';

const { title, version, license } = Astro.props;
---

<!-- <div class="grid-test">
  <div>1</div>
</div> -->
<header class="header">
  <a href="/" title={title}>
    <div class="header_logo">
      <Fragment set:html={__logoBlackbyte} />
    </div>
    <h1 class="header_title">{title}</h1>
  </a>
  <p class="header_version">v{version}</p>
  <a
    class="header_license"
    href={license.url}
    target="_blank"
    title={license.name}
  >
    {license.name}
  </a>
  <button class="header_menu"></button>
</header>
