---
interface Props {
  title: string;
  pageTitle: string;
  description: string;
  license: {
    name: string;
    url: string;
  };
  og: {
    imageUrl: string;
  };
}

import { ViewTransitions } from 'astro:transitions';
import '../fonts/fonts';
import './layout.css';

import '../fonts/fonts.css';

// @ts-ignore
const { frontmatter, title, pageTitle, description, og } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, user-scalable=no"
    />
    <meta
      property="og:site_name"
      content={`Lotsof - ${frontmatter?.title ?? title}`}
    />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:description" content={description} />
    <meta property="og:locale" content="en_US" />
    <meta property="og:title" content={frontmatter?.title ?? title} />
    <meta property="og:type" content="article" />
    <meta property="og:image" content={og.imageUrl} />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/favicon/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/favicon/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/favicon/favicon-16x16.png"
    />
    <link rel="manifest" href="/favicon/site.webmanifest" />
    <title>Lotsof - {`${title}${pageTitle ? `- ${pageTitle}` : ''}`}</title>
    <ViewTransitions />
  </head>
  <body>
    <slot />
  </body>
</html>
