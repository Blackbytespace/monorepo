---
interface Props {
  version: string;
  title: string;
  pageTitle: string;
  description: string;
  menu: any;
  og: {
    imageUrl: string;
  };
  license: {
    name: string;
    url: string;
  };
  themes: {
    name: string;
    value: string;
  }[];
}

import { fade } from 'astro:transitions';
import Layout from '../layout/layout.astro';
import Header from '../header/header.astro';
import Footer from '../footer/footer.astro';
import './main';
import __logoBlackbyte from '@blackbyte/website-common/src/img/blackbyte-logo-picto.svg?raw';

const { title, version, license } = Astro.props;
---

<script>
  document.addEventListener('astro:page-load', () => {
    if (document.location.pathname === '/') {
      document.body.classList.add('-home');
    } else {
      document.body.classList.remove('-home');
    }
  });
</script>

<Layout
  title={Astro.props.title}
  pageTitle={Astro.props.pageTitle}
  description={Astro.props.description}
  license={Astro.props.license}
  og={Astro.props.og}
>
  <main class="main">
    <Header
      title={Astro.props.title}
      version={Astro.props.version}
      license={Astro.props.license}
    />

    <div class="main_body" transition:animate={fade({ duration: '0.1s' })}>
      <div class="container">
        <div class="markdown typo-format typo-rhythm">
          <slot />
        </div>
      </div>
    </div>
  </main>

  <Footer
    title={Astro.props.title}
    version={Astro.props.version}
    license={Astro.props.license}
  />

  <!-- <Theme themes={Astro.props.themes} /> -->
</Layout>
