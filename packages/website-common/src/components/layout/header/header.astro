---
interface Props {
  title: string;
  version: string;
  license: {
    name: string;
    url: string;
  };
}

import __logoBlackbyte from '@blackbyte/website-common/src/img/blackbyte-logo.svg?raw';

const { title, version, license } = Astro.props;
---

<header class="header">
  <div class="container">
    <div class="header_brand">
      <a href="/" title={title}>
        <div class="header_logo">
          <Fragment set:html={__logoBlackbyte} />
        </div>
        <h1 class="header_title">{title}</h1>
      </a>
    </div>
    <div class="header_search">Search</div>
    <div class="header_metas">
      <p class="header_version">v{version}</p>
      <a
        class="header_license"
        href={license.url}
        target="_blank"
        title={license.name}
      >
        {license.name}
      </a>
    </div>
  </div>
</header>
