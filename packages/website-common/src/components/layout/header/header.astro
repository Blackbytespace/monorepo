---
interface Props {
  title: string;
  version: string;
  license: {
    name: string;
    url: string;
  };
}

import __logoBlackbyte from '@blackbyte/website-common/src/img/blackbyte-logo.svg?raw';
import Search from '../search/search.astro';

const { title, version, license } = Astro.props;
---

<header class="header">
  <div class="container">
    <div class="header_brand">
      <a href="/" title={title}>
        <div class="header_logo">
          <Fragment set:html={__logoBlackbyte} />
        </div>
        <h1 class="header_title font-family-brand">{title}</h1>
      </a>
    </div>
    <div class="header_search">
      <Search />
    </div>
    <div class="header_metas">
      <p class="header_version">v{version}</p>
      <a
        class="header_license"
        href={license.url}
        target="_blank"
        title={license.name}
      >
        {license.name}
      </a>
      <a
        class="header_github"
        href="https://github.com/blackbytespace/monorepo"
        title="Blackbyte monorepo on GitHub"
        target="_blank"
      >
        <s-icon name="github" provider="pixelarticons" type="brands"></s-icon>
      </a>
    </div>
  </div>
</header>
