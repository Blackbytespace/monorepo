{
  "exclude": [
    "_wip/**/*",
    "lotsof.config.ts",
    "package.json",
    "./src/**/*.test.*",
    "./src/components/**/*",
    "./dist/**/*",
    "./node_modules/**/*",
    "./vendor/**/*"
  ],
  "compilerOptions": {
    "noImplicitAny": false,
    "jsx": "react",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./components",
    "skipLibCheck": true,
    "strict": true,
    "target": "es6",
    "module": "nodenext",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "nodenext"
  }
}
