{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "/ui/card",
  "title": "Card",
  "description": "Card component",
  "type": "object",
  "editor": {
    "groups": [
      {
        "id": "default",
        "title": "Default",
        "description": "Default options"
      },
      {
        "id": "advanced",
        "title": "Advanced (card)",
        "description": "Advanced card options",
        "type": "stack",
        "buttonText": "Edit advanced card options"
      }
    ]
  },
  "properties": {
    "body": {
      "$ref": "/ui/body"
    },
    "image": {
      "$ref": "/ui/image"
    },
    "id": {
      "type": "string",
      "title": "ID",
      "description": "Unique identifier",
      "editor": {
        "group": "advanced"
      }
    }
  }
}
