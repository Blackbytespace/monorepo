{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "/ui/button",
  "title": "Button",
  "description": "Buttons component",
  "type": "object",
  "editor": {
    "groups": [
      {
        "id": "default",
        "title": "Default",
        "description": "Default options"
      },
      {
        "id": "link",
        "title": "Link",
        "description": "Link options",
        "type": "stack",
        "buttonText": "Edit link options"
      },
      {
        "id": "advanced",
        "title": "Advanced (button",
        "description": "Advanced button options",
        "type": "stack",
        "buttonText": "Edit advanced button options"
      }
    ]
  },
  "properties": {
    "type": {
      "type": "string",
      "enum": ["solid", "outline", "text"],
      "default": "solid",
      "editor": {
        "group": "default"
      }
    },
    "link": {
      "$ref": "/ui/link",
      "editor": {
        "group": "link"
      }
    },
    "id": {
      "$extends": "jsonSchemaUtils/id",
      "editor": {
        "group": "advanced"
      }
    },
    "class": {
      "$extends": "jsonSchemaUtils/class",
      "editor": {
        "group": "advanced"
      }
    }
  }
}
