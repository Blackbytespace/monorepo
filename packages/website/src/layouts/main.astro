---
import Layout from '@lotsof/website-common/src/components/layout/layout.astro';
import '../components/index.css';

import __logoLotsof from '@lotsof/website-common/src/img/lotsof-logo.svg?raw';
import __pictoNewNasty from '@lotsof/website-common/src/img/picto-new-n-tasty.svg?raw';

import __packageJson from '../../package.json';
import faviconSvgSrc from '../img/favicon.svg';

const title = 'Lotsof';
---

<script>
  import '../components/index';
</script>

<Layout
  faviconSvg={faviconSvgSrc}
  title={title}
  ogImageUrl="https://cdn.lotsof.dev/img/lotsof-og.png"
>
  <main class="main">
    <div class="main_inner">
      <div class="container">
        <header class="header">
          <a class="header_logo" href="/" title={title}>
            <Fragment set:html={__logoLotsof} />
          </a>
          <div class="header_metas">
            <a
              href="https://github.com/lotsofdev/monorepo/blob/master/LICENSE"
              target="_blank"
              title="MIT License"
            >
              <h1 class="header_license">MIT</h1>
            </a>
            <a href="/" title={title}>
              <h4 class="header_version">v{__packageJson.version}</h4>
            </a>
          </div>
        </header>
        <ol class="websites">
          <li class="websites_website -sugarcss">
            <a href="https://sugarcss.lotsof.dev" title="Sugarcss">
              <p class="websites_title" style="--chars: 8;">Sugarcss</p>
              <p class="websites_text typo-p">
                Add a sugar in your css with nice features like live update and
                more
              </p>
            </a>
          </li>
        </ol>
      </div>
    </div>
  </main>
</Layout>
