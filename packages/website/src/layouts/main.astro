---
import Layout from '@lotsof/website-common/src/components/layout/layout.astro';
import '../components/index.css';

import __logoLotsofPicto from '@lotsof/website-common/src/img/logo-lotsof-picto.svg?raw';
import __logoLotsof from '@lotsof/website-common/src/img/logo-lotsof.svg?raw';
import __pictoNewNasty from '@lotsof/website-common/src/img/picto-new-n-tasty.svg?raw';

import __packageJson from '../../package.json';
import faviconSvgSrc from '../img/favicon.svg';

import LoCrt from '@lotsof/website-common/src/components/crt/crt.astro';

const title = 'Lotsof';
---

<script>
  import '../components/index';
</script>

<Layout faviconSvg={faviconSvgSrc} title={title}>
  <main class="main">
    <header class="header">
      <a class="_logo" href="/" title={title}>
        <Fragment set:html={__logoLotsofPicto} />
        <Fragment set:html={__logoLotsof} />
      </a>
      <a href="/" title={title} style={`--chars: ${title.length};`}>
        <h4 class="_version">v{__packageJson.version}</h4>
        <Fragment set:html={__pictoNewNasty} />
      </a>
    </header>
    <div class="main_inner">
      <div class="container">
        <ol class="websites">
          <li class="_website -sugarcss">
            <a href="https://sugarcss.lotsof.dev" title="Sugarcss">
              <p class="_title" style="--chars: 8;">Sugarcss</p>
              <p class="_text typo-p">
                Add a sugar in your css with nice features like live update and
                more
              </p>
            </a>
          </li>
          <li class="_website -sugar">
            <a href="https://sugar.lotsof.dev" title="Sugarcss">
              <p class="_title" style="--chars: 5;">Sugar</p>
              <p class="_text typo-p">
                A toolkit that gives you access to "lots of" of cool and useful
                Node/Js/Php stuffs
              </p>
            </a>
          </li>
        </ol>
      </div>
    </div>
  </main>
</Layout>
<LoCrt />
