---
import MainLayout from '@lotsof/website-common/src/components/main/main.astro';
import '../components/index.css';

import __packageJson from '../../package.json';
import faviconSvgSrc from '../img/favicon.svg';

const colorSchemas = [
  {
    name: 'Light',
    value: 'light',
  },
  {
    name: 'Dark',
    value: 'dark',
  },
  {
    name: 'Odd World',
    value: 'oddworld',
  },
];

const searchItems = {
  type: 'group',
  label: 'Documentation',
  items: [
    {
      id: 'install',
      label: 'Get started',
      value: 'install',
      slug: '/',
      preventSet: true,
    },
  ],
};
---

<script>
  import '../components/index';
</script>

<MainLayout
  faviconSvg={faviconSvgSrc}
  searchItems={searchItems}
  colorSchemas={colorSchemas}
  version={__packageJson.version}
  ogImageUrl="https://cdn.lotsof.dev/img/lotsof-sugar-og.png"
  title="Sugar"
>
  <slot />
</MainLayout>
